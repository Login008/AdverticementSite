<%- include('../partials/header', { userId }) %>
  <main class="container">
    <div class="actions">
      <h1>–í—Å–µ –æ–±—ä—è–≤–ª–µ–Ω–∏—è</h1>
      <a href="/ads/create" class="button">–ù–æ–≤–æ–µ –æ–±—ä—è–≤–ª–µ–Ω–∏–µ</a>
    </div>

    <!-- –§–∏–ª—å—Ç—Ä—ã -->
    <form class="filters" action="/ads" method="GET">
      <input type="text" name="q" placeholder="–ü–æ–∏—Å–∫..." value="<%= query.q || '' %>">
      <select name="category">
        <option value="">–í—Å–µ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏</option>
        <% categories.forEach(cat => { %>
          <option 
            value="<%= cat.CategoryID %>" 
            <%= query.category == cat.CategoryID ? 'selected' : '' %>
          ><%= cat.Name %></option>
        <% }) %>
      </select>
      <input type="number" name="minPrice" placeholder="–ú–∏–Ω. —Ü–µ–Ω–∞" value="<%= query.minPrice || '' %>">
      <input type="number" name="maxPrice" placeholder="–ú–∞–∫—Å. —Ü–µ–Ω–∞" value="<%= query.maxPrice || '' %>">
      <button type="submit" class="button">–ü–æ–∏—Å–∫</button>
    </form>

    <!-- –°–ø–∏—Å–æ–∫ –æ–±—ä—è–≤–ª–µ–Ω–∏–π -->
    <div class="ads-grid">
      <% if (ads.length === 0) { %>
        <p class="empty">–û–±—ä—è–≤–ª–µ–Ω–∏–π –Ω–µ –Ω–∞–π–¥–µ–Ω–æ üòû</p>
      <% } else { %>
        <% ads.forEach(ad => { %>
          <div class="ad-card">
            <% if (ad.ImagePath) { %>
              <img src="/uploads/<%= ad.ImagePath %>" class="ad-image">
            <% } %>
            <div class="ad-content">
              <h3><%= ad.Title %></h3>
              <p class="price"><%= ad.Price %> ‚ÇΩ</p>
              <p class="categories"><%= ad.Categories || '–ë–µ–∑ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏' %></p>
              <div class="ad-actions">
                <a href="/ads/<%= ad.AdID %>" class="button">–ü–æ–¥—Ä–æ–±–Ω–µ–µ</a>
                <% if (userId === ad.UserID) { %>
                  <a href="/ads/<%= ad.AdID %>/edit" class="button">–†–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å</a>
                  <form action="/ads/<%= ad.AdID %>/delete" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="button danger">–£–¥–∞–ª–∏—Ç—å</button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>

    <!-- –ü–∞–≥–∏–Ω–∞—Ü–∏—è -->
	<% if (typeof totalPages !== 'undefined' && totalPages > 1) { %>
		<div class="pagination">
        <% if (currentPage > 1) { %>
          <a href="?page=<%= currentPage - 1 %>" class="page-link">&laquo; –ù–∞–∑–∞–¥</a>
        <% } %>
        <% for (let i = 1; i <= totalPages; i++) { %>
          <a 
            href="?page=<%= i %>" 
            class="page-link <%= i === currentPage ? 'active' : '' %>"
          ><%= i %></a>
        <% } %>
        <% if (currentPage < totalPages) { %>
          <a href="?page=<%= currentPage + 1 %>" class="page-link">–í–ø–µ—Ä–µ–¥ &raquo;</a>
        <% } %>
      </div>
    <% } %>
  </main>
<%- include('../partials/footer') %>